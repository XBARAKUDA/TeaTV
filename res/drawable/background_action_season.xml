<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <stroke android:width="2.0dip" android:color="@color/color_bottom_action_ads" />
            <solid android:color="@color/color_bottom_action_ads" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <stroke android:width="2.0dip" android:color="@color/orange" />
            <solid android:color="@color/color_bottom_action_ads" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2.0dip" />
            <stroke android:width="2.0dip" android:color="@color/color_bottom_action_ads" />
            <solid android:color="@color/color_bottom_action_ads" />
        </shape>
    </item>
</selector>