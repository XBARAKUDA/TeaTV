<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="oval">
            <size android:height="90.0dip" android:width="90.0dip" />
            <stroke android:width="2.0dip" android:color="@color/colorAccent" />
            <solid android:color="@color/background_primary_alpha_25" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="oval">
            <size android:height="90.0dip" android:width="90.0dip" />
            <stroke android:width="2.0dip" android:color="@color/background_primary" />
            <solid android:color="@color/background_primary" />
        </shape>
    </item>
</selector>