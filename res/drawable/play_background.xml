<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <size android:height="50.0dip" android:width="50.0dip" />
            <stroke android:width="3.0dip" android:color="@color/blue" />
            <solid android:color="@color/blue_50" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <size android:height="50.0dip" android:width="50.0dip" />
            <stroke android:width="3.0dip" android:color="@color/blue_50" />
            <solid android:color="@color/blue_50" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <size android:height="50.0dip" android:width="50.0dip" />
            <stroke android:width="0.0dip" android:color="@android:color/transparent" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="oval"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <size android:height="50.0dip" android:width="50.0dip" />
            <stroke android:width="2.0dip" android:color="@color/colorAccent" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>